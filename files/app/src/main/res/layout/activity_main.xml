<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:id="@+id/linearLayout"
        android:gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="400dp"
            android:layout_height="200dp"
            android:id="@+id/cpu"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/sazae3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="waiting..."
            android:id="@+id/result"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.04" />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:id="@+id/player"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/katsuo" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@+id/linearLayout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="27dp"
            android:weightSum="1"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_width="105dp"
                android:layout_height="50dp"
                android:id="@+id/goo"
                android:src="@drawable/goo"
                android:layout_weight="0.06"
                android:onClick="goo" />

            <ImageView
                android:layout_width="110dp"
                android:layout_height="50dp"
                android:id="@+id/choki"
                android:src="@drawable/choki"
                android:onClick="choki" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView4"
                android:layout_weight="0.06" />

            <ImageView
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:id="@+id/paa"
                android:src="@drawable/paa"
                android:onClick="paa" />
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:id="@+id/imageView"
        android:layout_weight="2.52"
        android:src="@drawable/sazae2"
        android:onClick="reset"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
